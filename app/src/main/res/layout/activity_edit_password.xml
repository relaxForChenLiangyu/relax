<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:context="com.example.cynthia.relax.activitis.personal.EditPasswordActivity"
        android:orientation="vertical">

    <TextView
            android:text="请为您的账户更改一个新的密码，为了确认您的身份我们需要您填写您当前的密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTitle"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="8sp" android:textSize="14sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:hint="当前密码"
            android:ems="10"
            android:id="@+id/curPwd" android:textSize="14sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="新密码"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:id="@+id/newPwd" android:textSize="14sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:id="@+id/confirmPwd" android:textSize="14sp"/>
    <Button
            android:text="确认修改"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/submitPwd"
            android:background="@android:color/transparent" android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"/>
</LinearLayout>
