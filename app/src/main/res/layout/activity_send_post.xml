<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        tools:context="com.example.cynthia.relax.activitis.post.SendPostActivity">
    <include layout="@layout/top_toolbar"
             android:id="@+id/top_toolbar"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/titleEdit" android:hint="请输入问题..." android:textSize="14sp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:ems="10" android:gravity="start"
            android:maxLines="4" android:layout_marginTop="15dp"
            android:id="@+id/contentEdit" android:hint="请输入问题描述..." android:textSize="14sp"/>
    <Button
            android:text="提交" android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/sendBtn" android:textSize="14sp"/>
</LinearLayout>
