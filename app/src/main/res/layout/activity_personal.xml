<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.cynthia.relax.activitis.personal.PersonalActivity" android:orientation="vertical">
    <include layout="@layout/top_toolbar"
             android:id="@+id/top_toolbar"/>

    <ScrollView
            android:layout_width="match_parent" android:layout_below="@+id/top_toolbar"
            android:layout_height="match_parent" android:layout_above="@+id/quitBtn">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/toolbar"
                    android:id="@+id/personalHeader"
                    android:background="@color/myColorPrimary">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_height="75dp"
                            android:src="@mipmap/portrait"
                            android:id="@+id/personalPortrait"
                            android:layout_centerInParent="true"/>
                    <TextView
                            android:text="用户名"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personalName"
                            android:textAlignment="center"
                            android:layout_alignParentBottom="true"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/personalInfoLayout"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_below="@+id/personalHeader"
                    android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="个人主页"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content" android:id="@+id/personalInfoTitle"
                            android:layout_weight="1"/>
                    <TextView
                            android:text="编辑"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editInfoBtn" android:layout_weight="1"
                            android:textAlignment="textEnd" android:textColor="@android:color/holo_blue_light"/>
                </LinearLayout>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp" app:srcCompat="@android:color/darker_gray"
                        android:id="@+id/line"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="手机"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/personalPhoneTitle"/>
                    <TextView
                            android:text="12345"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/personalPhone"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="真实姓名"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/personalRealNameTitle"/>
                    <TextView
                            android:text="XXX"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/personalRealName"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="认证资格"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/personalQualificationTitle"/>
                    <TextView
                            android:text="普通用户"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/personalQualification"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="账户余额"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/personalRemainderTitle"/>
                    <TextView
                            android:text="0元"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/personalRemainder"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="轻松值"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/personalRelaxDegreeTitle"/>
                    <TextView
                            android:text="80"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/personalRelaxDegree"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@android:color/white"
                    android:id="@+id/personalSpInfo"
                    android:visibility="gone"
                    android:layout_weight="1">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:srcCompat="@android:color/darker_gray"
                        android:id="@+id/imageView2"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="认证资格"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personalSpQualifyTitle" android:layout_weight="1"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personalSpQualify" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="从业时长"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personalSpLengthTitle" android:layout_weight="1"/>
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personalSpLength" android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="个人简介"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personalSpIntroTitle" android:layout_weight="1"
                    />
                    <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personalSpIntro" android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_below="@+id/personalSpInfo"
                    android:id="@+id/personalEditLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="修改信息"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" android:id="@+id/personalEditTitle"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp" app:srcCompat="@android:color/darker_gray"
                        android:id="@+id/line2"/>
                <Button
                        android:text="修改密码"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:id="@+id/personalEditPwdBtn"
                        android:background="@android:color/white"
                        android:textAlignment="textStart"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="退出当前账号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/quitBtn"
            android:background="@android:color/white" android:textColor="@android:color/holo_red_dark"/>
</RelativeLayout>
