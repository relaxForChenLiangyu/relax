<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:context="com.example.cynthia.relax.activitis.register.RegisterActivity">

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/registerProgressBar"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="用户名"
                android:layout_width="80dp"
                android:layout_height="wrap_content" android:id="@+id/nickName"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editNickName"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="真实姓名"
                android:layout_width="80dp"
                android:layout_height="wrap_content" android:id="@+id/realName"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editRealName"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="手机"
                android:layout_width="80dp"
                android:layout_height="wrap_content" android:id="@+id/phone"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editPhone"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="密码"
                android:layout_width="80dp"
                android:layout_height="wrap_content" android:id="@+id/pwd"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editPwd"/>
    </LinearLayout>
    <Button
            android:text="注册"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/registerBtn"/>
    <Button
            android:text="已有账号，去登录"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/redictBtn"
            style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@color/colorPrimary"/>
</LinearLayout>
