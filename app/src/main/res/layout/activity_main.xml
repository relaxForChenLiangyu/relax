<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout"
        tools:context="com.example.cynthia.relax.activitis.main.MainActivity">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    android:theme="?attr/actionBarTheme"
                    android:minHeight="?attr/actionBarSize"
                    android:id="@+id/toolbar"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/linearLayout"
                    android:layout_below="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="#ffdfe9">

                    <Button
                            android:text="注册"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content" android:id="@+id/mainRegister"
                            android:background="@android:color/transparent" android:textSize="18sp"
                            android:layout_centerVertical="true" android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" android:layout_marginRight="20dp"
                            android:layout_marginEnd="20dp"/>
                    <Button
                            android:text="登录"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content" android:id="@+id/mainLogin"
                            android:background="@android:color/transparent" android:textSize="18sp"
                            android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/mainRegister"
                            android:layout_alignStart="@+id/mainRegister"/>
                </RelativeLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1">
                        <ImageButton
                                android:layout_height="75dp"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                app:srcCompat="@mipmap/heart_plaster"
                                android:id="@+id/selfTest" android:background="@android:color/transparent"/>
                        <TextView
                                android:text="心理自测"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/selfTestText" android:textAlignment="center"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1">
                        <ImageButton
                                android:layout_height="75dp"
                                android:layout_width="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_gravity="center|top"
                                android:src="@mipmap/pot_love_pills"
                                android:id="@+id/preOrder" android:background="@android:color/transparent"
                        />
                        <TextView
                                android:text="预约专家"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/preOrderText"
                                android:textAlignment="center"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1">
                        <ImageButton
                                android:layout_height="75dp"
                                android:layout_width="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_gravity="center|top"
                                android:id="@+id/myOrders"
                                android:src="@mipmap/love_notebook"
                                android:background="@android:color/transparent"/>
                        <TextView
                                android:text="我的订单"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/myOrdersText"
                                android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:padding="5dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1">
                        <ImageButton
                                android:layout_height="75dp"
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_gravity="right|bottom"
                                app:srcCompat="@mipmap/heart_bulb_stars"
                                android:background="@android:color/transparent"
                                android:id="@+id/article" android:layout_weight="1"/>
                        <TextView
                                android:text="在线咨询"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/articleText"
                                android:layout_weight="1"
                                android:textAlignment="center"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1">
                        <ImageButton
                                android:layout_height="75dp"
                                android:layout_width="match_parent"
                                android:layout_gravity="left|bottom"
                                android:layout_margin="5dp"
                                app:srcCompat="@mipmap/mailbox_hearts"
                                android:background="@android:color/transparent"
                                android:id="@+id/treeHole" android:layout_weight="1"/>
                        <TextView
                                android:text="树洞"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/treeHoleText"
                                android:layout_weight="1"
                                android:textAlignment="center"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1">
                        <ImageButton
                                android:layout_height="75dp"
                                android:layout_width="match_parent"
                                android:layout_gravity="center|bottom"
                                android:layout_margin="5dp"
                                app:srcCompat="@mipmap/heart_balloon"
                                android:id="@+id/music" android:layout_weight="1"
                                android:background="@android:color/transparent"/>
                        <TextView
                                android:text="推荐音乐"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/musicText"
                                android:layout_weight="1"
                                android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#fff8d7"
            app:menu="@menu/nav_menu"
            app:headerLayout="@layout/nav_header"
    />
</android.support.v4.widget.DrawerLayout>
